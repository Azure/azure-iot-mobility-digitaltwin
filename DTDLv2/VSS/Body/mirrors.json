{
    "@id": "dtmi:com:ivehicle:ibody:mirror;1",
    "@type": "Interface",
    "comment": "All exterior mirrors",
    "displayName": "Mirror",
    "contents": [
    {
        "@type": "Command",
        "name": "Tilt",
        "description": "Mirror tilt as a percent. 0 = Center Position. 100 = Fully Upward Position. -100 = Fully Downward Position.",
        "comment": "actuator",
        "request": {
            "name": "Tilt",
            "comment": "units in percent",
            "schema": "integer"
        },
        "response": {
            "name": "Tilt",
            "comment": "units in percent",
            "schema": "integer"
        }
    },
    {
        "@type": "Command",
        "name": "Pan",
        "description": "Mirror pan as a percent. 0 = Center Position. 100 = Fully Left Position. -100 = Fully Right Position.",
        "comment": "actuator",
        "request": {
            "name": "Pan",
            "comment": "units in percent",
            "schema": "integer"
        },
        "response": {
            "name": "Pan",
            "comment": "units in percent",
            "schema": "integer"
        }
    },
    {
        "@type": "Command",
        "name": "Heating",
        "description": "Mirror Heater on or off. True = Heater On. False = Heater Off.",
        "comment": "actuator",
        "request": {
            "name": "Heating",
            "schema": "boolean"
        },
        "response": {
            "name": "Heating",
            "schema": "boolean"
        }
    }
    ],
    "@context": "dtmi:dtdl:context;2"
  }